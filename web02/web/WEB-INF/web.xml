<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>DeptListServlet</servlet-name>
        <servlet-class>com.czz.servlet.DeptListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptListServlet</servlet-name>
        <url-pattern>/dept/list</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>DeptDelServlet</servlet-name>
    <servlet-class>com.czz.servlet.DeptDelServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>DeptDelServlet</servlet-name>
        <url-pattern>/dept/del</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptInsertServlet</servlet-name>
        <servlet-class>com.czz.servlet.DeptInsertServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptInsertServlet</servlet-name>
        <url-pattern>/dept/insert</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>DeptQueryBeforeUpdateServlet</servlet-name>
    <servlet-class>com.czz.servlet.DeptQueryBeforeUpdateServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>DeptQueryBeforeUpdateServlet</servlet-name>
        <url-pattern>/dept/queryBeforeUpdate</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeptUpdateServlet</servlet-name>
        <servlet-class>com.czz.servlet.DeptUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeptUpdateServlet</servlet-name>
        <url-pattern>/dept/update</url-pattern>
    </servlet-mapping>
</web-app>